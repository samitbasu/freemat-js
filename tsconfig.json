{
    "compilerOptions": {
        "outDir": "./built",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "alwaysStrict": true,
	"strictNullChecks": true,
        "target": "es6",
        "module": "commonjs",
	"removeComments": false,
	"preserveConstEnums": true,
	"experimentalDecorators": true,
	"declaration": true,
        "sourceMap": true
    },
    "include": [
        "./src/**/*"
    ]
}
